---
import Page from "@/layouts/page.astro"
import { getCollection } from "astro:content"

const posts = await getCollection("blog")
---

<Page>
    <section class="blog">
        <h1>Articles</h1>
        <ul>
            {
                posts.map((post) => (
                    <li>
                        <a href={`/blog/${post.id}`}>{post.data.title}</a>
                    </li>
                ))
            }
        </ul>
    </section>
</Page>

<style>
    .blog {
        padding: 1rem;
    }
</style>
